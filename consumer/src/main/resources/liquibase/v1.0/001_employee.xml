    <changeSet id="1" author="ath">
        <createTable tableName="employee">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="text"/>
            <column name="content" type="text"/>
            <column name="author" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>

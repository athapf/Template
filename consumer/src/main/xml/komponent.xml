<?xml version="1.0" encoding="UTF-8"?>

<komponent name="Consumer" package="consumer">

    <resources path="library">
        <resource name="Library"
                  path="library"
                  service="LibraryService">
            <dto name="Book" entity="MyBook"/>
            <dto name="Stock" entity="MyStock"/>
            <method type="GET"
                    path="reset"
                    name="doReset"
                    result="String"/>
            <method type="GET"
                    path="{pos}/stock"
                    name="stockInfo"
                    dto="Stock"
                    result="Multi">
                <param name="pos" type="String"/>
            </method>
        </resource>
    </resources>

    <topics>
        <consumer name="consumeBook"
                  topic="registeredBooks"
                  service="LibraryService"
                  key="Long">
            <dto name="Book" entity="MyBook"/>
        </consumer>
    </topics>

    <database>
        <dao target="cassandra" entity="Worktime">
            <update/>
            <select/>
            <store/>
        </dao>
    </database>

    <datacatalog>
        <entity name="MyBook">
            <field name="Id" type="Long" key="true"/>
            <field name="Title" type="String"/>
            <field name="Content" type="String"/>
            <field name="Author" type="String"/>
        </entity>
        <entity name="MyStock">
            <field name="Pos" type="String"/>
            <field name="Count" type="Integer"/>
        </entity>
    </datacatalog>
</komponent>
